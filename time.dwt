//					if(m1 == 0 && m2==0){
//							 $("#mjw1").trigger("click"); //跳转60秒倒计时
//					}
			$('#min1').p(m1);
			$('#min2').p(m2);
			if(h==Math.floor(time/3600))return false;
			h = Math.floor(time/3600);
			var h1=Math.floor(h/100);
			var h2=Math.floor((h-h1*100)/10);
			var h3=h-h1*100-h2*10;
			$('#hour1').p(h1);
			$('#hour2').p(h2);
			$('#hour3').p(h3);

}

